<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>      
         <!--
        calendar.service.recurrent.rule
        -->
        <record id="view_recurrent_rule_change_form" model="ir.ui.view">
            <field name="name">recurrent.rule.change</field>
            <field name="model">recurrent.rule.change</field>
            <field name="priority">2</field>
            <field name="arch" type="xml">
                <form string="Rule Change">
                    <sheet>
                        <group>
                            <group>
                                <field name="rule_id"/>
                                <field name="change_type"/>
                            </group>
                            <group>
                                <field name="date_from"/>
                                <field name="date_to"/>
                            </group>
                        </group>
                        <field name="change_time_ids">
                            <tree string="Change Times" editable="bottom">
                                <field name="calendar_id"/>
                                <field name="action"/>
                                <field name="day" 
                                    attrs="{'readonly': [('action', '=', 'delete')], 'required': [('action', '=', 'update')]}"/>                                
                                <field name="time_from" widget="float_time" 
                                    attrs="{'readonly': [('action', '=', 'delete')], 'required': [('action', '=', 'update')]}"/>
                                <field name="time_to" widget="float_time" 
                                    attrs="{'readonly': [('action', '=', 'delete')], 'required': [('action', '=', 'update')]}"/>
                            </tree>
                        </field>
                    </sheet>
                    <footer>
                        <button name="change_rule" string="Change Rule" class="oe_highlight" type="object"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="act_recurrent_rule_change" model="ir.actions.act_window">
            <field name="name">Medical Card History</field>
            <field name="res_model">recurrent.rule.change</field>
            <!--<field name="src_model">calendar.service.recurrent</field>-->
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_recurrent_rule_change_form"/>
            <field name="target">new</field>
        </record>

    </data>
</openerp>
