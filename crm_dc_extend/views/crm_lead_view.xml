<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>   
        <record id="crm_case_form_view_leads_inherit" model="ir.ui.view">
            <field name="name">CRM Lead Form - Inherit</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_case_form_view_leads"/>
            <field name="arch" type="xml"> 
                <field name="street2" position="after">
                    <div class="oe_inline">
                        <field name="eyre" style="width: 35%%"
                            placeholder="Eyre"
                        />
                        <field name="apartment_complex" style="width: 35%%"
                            placeholder="Apt. Complx."
                        />
                        <field name="house_name" style="width: 30%%"
                            placeholder="HS Name"
                        />
                    </div>
                </field>
                <field name="zip" position="attributes">
                    <attribute name="placeholder">Post Code</attribute>
                </field>                
                <field name="country_id" position="after">
                    <field name="address_description"
                        placeholder="Address Description"
                    />
                </field>   
                <field name="function" position="before">
                    <field name="nationality_id" 
                    />
                </field>                                            
                <page string="Internal Notes" position="after">
                    <page string="Cleaning Info">
                        <group>
                            <group>
                                <field name="product_id"/>                            
                            </group>
                            <group>
                                <field name="desirable_duration" widget="float_time"/>
                            </group>
                        </group>
                        <group>
                            <field name="cleaning_calendar_ids">
                                <tree string="Cleaning Time" editable="bottom">
                                    <field name="cleaning_day"/>
                                    <field name="clean_time_from" widget="float_time"/>
                                    <field name="clean_time_to" widget="float_time"/>
                                </tree>
                            </field>
                        </group>
                    </page>
                </page>
            </field>
        </record> 

